{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <div id="indx">
        <h1>Article index</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Publication_date</th>
                <th>Title</th>
                <th>Content</th>
                <th>Emergency</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in article %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.publicationDate ? article.publicationDate|date('Y-m-d') : '' }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.emergency ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-outline-info" href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a class="btn btn-outline-danger" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a id="create" class="btn btn-success" href="{{ path('article_new') }}">Create new</a>
{% endblock %}
